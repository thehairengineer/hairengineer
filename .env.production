# Server Environment
NODE_ENV=production

# Database Connection
MONGODB_URI=mongodb+srv://your-production-mongodb-uri

# Authentication
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-production-secret-key
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-strong-password

# Payment Gateway (Paystack)
PAYSTACK_SECRET_KEY=your-production-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-production-paystack-public-key

# Email Configuration (if needed)
EMAIL_SERVER=smtp://username:password@smtp.your-email-provider.com:587
EMAIL_FROM=notifications@your-domain.com

# Performance Optimizations
NEXT_OPTIMIZE_IMAGES=true
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_CSS=true

# Cache control
NEXT_CACHE_DURATION=31536000 # Cache for 1 year in seconds 